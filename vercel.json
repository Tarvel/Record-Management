{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "buildCommand": "bash build_files.sh",
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles_build/$1" },
    { "src": "/(.*)", "dest": "base/wsgi.py" }
  ]
}
